<!DOCTYPE html>
<html lang="en" class="h-100">
   <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <title>Login | KJ Somaiya OET-OEHM Portal</title>
      <link rel="shortcut icon" type="img/png" href="img/favicon.png" />
      <link href="./css/style.css" rel="stylesheet">
      <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.6.7/axios.js"></script>

   </head>
   <body class="body  h-100">
      <div class="container h-100">
         <div class="row h-100 align-items-center justify-contain-center">
            <div class="col-xl-12 mt-3">
               <div class="text-center my-5">
                  <a href="/"><img height="100%" src="img/logo.svg" alt="KJSCE"></a>
               </div>
               <div class="card">
                  <div class="card-body p-0">
                     <div class="row m-0">
                        <div class="col-xl-6 col-md-6 sign text-center">
                           <div>
                              <img src="/img/BG-login.jpg" class="education-img" width="100%" height="100%"></img>
                           </div>
                        </div>
                        <div class="col-xl-6 col-md-6">
                           <div class="sign-in-your">
                              <h4 class="fs-20 font-w800 text-black">Login to Admin account</h4>
                              <span>Please enter your Admin ID & Password</span>
                              
                              <form action="/">
                                 <div class="mb-3">
                                    <label class="mb-1"><strong>Email</strong></label>
                                    <input type="email" class="form-control" placeholder="SVV Net ID" id="email">
                                 </div>
                                 <div class="mb-3">
                                    <label class="mb-1"><strong>Password</strong></label>
                                    <input type="password" class="form-control" placeholder="Password" id="password">
                                 </div>
                                 <div class="row d-flex justify-content-between mt-4 mb-2">
                                    <div class="mb-3">
                                       <div class="form-check custom-checkbox ms-1">
                                          <input type="checkbox" class="form-check-input" id="basic_checkbox_1">
                                          <label class="form-check-label" for="basic_checkbox_1">Remember Me</label>
                                       </div>
                                    </div>
                                 </div>
                                 <div class="text-center">
                                    <button type="button" class="btn btn-primary btn-block" onclick="Login()">Login</button>
                                 </div>
                              </form>
                           </div>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <div class="footer">
               <div class="copyright">
                  <p>Copyright Â© KJ Somaiya College Of Engineering</p>
               </div>
            </div>
         </div>
      </div>
      <!--**********************************
         Scripts
         ***********************************-->
      <!-- Required vendors -->
       <script>
            async function Login(){
                const response = await axios({
                    method: 'POST',
                    url: '/login',
                    data: {"email":document.getElementById('email').value,"password":document.getElementById("password").value}
                })
                if(response.data.msg){
                  window.location.href="http://localhost:8000/home";
                  
                }
            }
       </script>
      <script src="./vendor/global/global.min.js"></script>
      <script src="./js/custom.js"></script>
      <script src="./js/dlabnav-init.js"></script>
      <script src="./js/styleSwitcher.js"></script>
   </body>
</html>